# Node Inventory Configuration
nodes:
  - name: "us-node-01"
    host: "192.168.1.100"
    port: 22
    user: "root"
    auth_type: "key"  # key | password
    key_path: "~/.ssh/id_rsa"
    # tags: ["us", "production"]

  - name: "hk-node-02"
    host: "192.168.1.101"
    port: 2222
    user: "admin"
    auth_type: "password"
    # password: "MyPassword" # Not recommended, use environment variable instead
    password_env: "HK_NODE_PASS" # Will read from environment variable $HK_NODE_PASS

global:
  config_source: "./singbox/config.json" # Local config template or file
  remote_config_path: "/etc/sing-box/config.json"
  restart_command: "systemctl restart sing-box"
